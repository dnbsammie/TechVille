<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UI.Controller"
            styleClass="root">

    <!-- HEADER -->
    <top>
        <HBox styleClass="header">
            <Label text="TechVille" styleClass="title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Crear Usuario" styleClass="header-button" onAction="#handleCreateUser"/>
            <Button text="Ver Carrito" styleClass="header-button" onAction="#handleViewCart"/>
        </HBox>
    </top>

    <!-- MENÚ LATERAL -->
    <left>
        <VBox styleClass="sidebar">
            <Label text="Categorías" styleClass="sidebar-title"/>
            <Button text="Teléfonos" styleClass="sidebar-button"/>
            <Button text="Computación" styleClass="sidebar-button"/>
            <Button text="Tabletas" styleClass="sidebar-button"/>
            <Button text="Audio" styleClass="sidebar-button"/>
            <Button text="Video" styleClass="sidebar-button"/>
            <Button text="Televisión" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- CONTENIDO CENTRAL -->
    <center>
        <VBox styleClass="content">
            <TextField fx:id="nameField" promptText="Nombre del Producto" styleClass="input"/>
            <TextField fx:id="priceField" promptText="Precio" styleClass="input"/>
            <TextField fx:id="quantityField" promptText="Cantidad" styleClass="input"/>
            
            <Button text="Agregar Producto" styleClass="button" onAction="#handleAddProduct"/>
            
            <TextArea fx:id="cartDisplay" editable="false" styleClass="cart-display"/>
            
            <Button text="Calcular Total" styleClass="button" onAction="#handleCalculateTotal"/>
        </VBox>
    </center>

    <!-- FOOTER -->
    <bottom>
        <HBox styleClass="footer">
            <Label text="© 2025 TechVille - Todos los derechos reservados" styleClass="footer-text"/>
        </HBox>
    </bottom>
</BorderPane>
